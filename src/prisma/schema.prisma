generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:postgres@localhost:5432/dsp"
}

model Feed {
  id          String @id @default(cuid())
  path        String @unique
  name        String
  config      Json
  queryParams Json[]
}

model Filter {
  id           String @id @default(cuid())
  name         String @unique
  description  String
  type         String
  code         String?
  filterParams Json[] @default([])
}

model adBreaks {
  mediaId String @id @unique
  markers Json
}

model JobQueue {
  id          String   @id @default(cuid())
  queueName   String
  jobId       String
  status      String
  payload     Json
  createdAt   DateTime @default(now())
  completedAt DateTime? 
  error       String?

  @@unique([queueName, jobId])
}
